@model IEnumerable<poller.Models.Answer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AnswerString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PollID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Votes)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnswerString)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PollID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Votes)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.AnswerID">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.AnswerID">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.AnswerID">Delete</a>
        </td>
    </tr>
}
</table>

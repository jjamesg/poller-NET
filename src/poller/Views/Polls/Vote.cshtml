@model poller.ViewModels.PollAndAnswers

@{
    ViewData["Title"] = "Vote";
}

<h2>Vote</h2>

<form asp-action="Vote">
    <div class="form-horizontal">
        <hr />
        <h1>@Model.poll.Question</h1>
        <input type="hidden" name="id" value="@Model.poll.PollID" />
        @foreach (Answer answer in Model.answers)
        {
            <div class="form-group">
                <div class="radio">
                    <label><input type="radio" name="answerID" value="@answer.AnswerID" />@answer.AnswerString</label>
                </div>
            </div>
        }
        <div class="form-group">
            <input type="submit" value="Vote" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Create">Create a new poll</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
